BoxLayout:
    orientation: "vertical"
    BoxLayout:
        orientation: "horizontal"
        TextInput:
            id: user_input
            text: "Enter Number"
            size_hint_x: 1.8
        BoxLayout:
            orientation: "vertical"
            Button:
                text: "Up"
                on_press: app.handle_increment(1)
            Button:
                text: "Down"
                on_press: app.handle_increment(1)
    Button:
        text: "Convert Miles to Kilometers"
        on_press: app.handle_convert()
    Label:
        id: output
        text: app.output

